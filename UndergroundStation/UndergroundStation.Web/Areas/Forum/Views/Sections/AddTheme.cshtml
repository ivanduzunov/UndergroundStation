@model ThemeCreateFormModel

@{
    ViewData["Title"] = $"Add Theme";
}
<br />
<br />
<br />
<h2>@ViewData["Title"]</h2>

<div class="row" >
    <div class="col-sm-4" >
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="10" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden"  asp-for="CreatorId" rows="10" class="form-control">
                <span asp-validation-for="CreatorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="ForumSectionId" rows="10" class="form-control">
                <span asp-validation-for="ForumSectionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="PublishedDate" rows="10" class="form-control">
                <span asp-validation-for="PublishedDate" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-success">Add Theme</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

